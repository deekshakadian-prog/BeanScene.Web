@model BeanScene.Web.ViewModels.ReservationDashboardViewModel

@{
    ViewData["Title"] = "Reservation Dashboard";
}

<h2>@ViewData["Title"]</h2>

<!-- Date filter -->
<form method="get" asp-controller="Dashboards" asp-action="Index" class="row g-2 mb-3">
    <div class="col-auto">
        <label for="date" class="col-form-label">Date:</label>
    </div>
    <div class="col-auto">
        <input type="date"
               id="date"
               name="date"
               class="form-control"
               value="@Model.Date.ToString("yyyy-MM-dd")" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Go</button>
    </div>
</form>

<!-- Summary cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card border-primary">
            <div class="card-header bg-primary text-white">Total Reservations</div>
            <div class="card-body">
                <h3 class="card-title">@Model.TotalReservations</h3>
                <p class="card-text">@Model.Date.ToString("dd MMM yyyy")</p>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">Pending</div>
            <div class="card-body">
                <h3 class="card-title">@Model.PendingReservations</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card border-success">
            <div class="card-header bg-success text-white">Confirmed</div>
            <div class="card-body">
                <h3 class="card-title">@Model.ConfirmedReservations</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card border-secondary">
            <div class="card-header bg-secondary text-white">Seated</div>
            <div class="card-body">
                <h3 class="card-title">@Model.SeatedReservations</h3>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card border-info">
            <div class="card-header bg-info text-white">Completed</div>
            <div class="card-body">
                <h3 class="card-title">@Model.CompletedReservations</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">Cancelled</div>
            <div class="card-body">
                <h3 class="card-title">@Model.CancelledReservations</h3>
            </div>
        </div>
    </div>

   
<!-- Reservations list -->
@if (Model.Reservations != null && Model.Reservations.Any())
{
    <h3>Reservations for @Model.Date.ToString("dd MMM yyyy")</h3>

    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Time</th>
                <th>Guest</th>
                <th>Guests</th>
                <th>Sitting</th>
                <th>Area / Tables</th>
                <th>Status</th>
                <th>Source</th>
                <th>Contact</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Reservations.OrderBy(r => r.ReservationStart))
            {
                <tr>
                    <td>@r.ReservationStart.ToString("HH:mm")</td>
                    <td>@r.GuestName</td>
                    <td>@r.NumberOfGuests</td>
                    <td>@r.SittingName</td>
                    <td>
                        @r.Area<br />
                        <small>@r.Tables</small>
                    </td>
                    <td>@r.Status</td>
                    <td>@r.Source</td>
                    <td>
                        @if (!string.IsNullOrWhiteSpace(r.Phone))
                        {
                            <div>@r.Phone</div>
                        }
                        @if (!string.IsNullOrWhiteSpace(r.Email))
                        {
                            <div>@r.Email</div>
                        }
                    </td>
                    <td>@r.Notes</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No reservations for @Model.Date.ToString("dd MMM yyyy").
    </div>
}
