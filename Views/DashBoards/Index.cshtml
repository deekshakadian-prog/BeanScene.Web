@model BeanScene.Web.ViewModels.ReservationDashboardViewModel

@{
    ViewData["Title"] = "Reservation Dashboard";
}

<div class="container mt-4">

    <!-- Header with date filter -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Reservation Dashboard</h2>
            <p class="text-muted mb-0">
                @Model.Date.ToString("dddd, dd MMMM yyyy")
            </p>
        </div>

        <form method="get" class="d-flex align-items-center">
            <label class="me-2 mb-0">Date:</label>
            <input type="date"
                   name="date"
                   class="form-control me-2"
                   value="@Model.Date.ToString("yyyy-MM-dd")" />
            <button type="submit" class="btn btn-primary">Go</button>
        </form>
    </div>

    <!-- Top summary cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title text-muted">Total Reservations</h6>
                    <p class="display-6 mb-0">@Model.TotalReservations</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title text-muted">Pending</h6>
                    <p class="display-6 mb-0 text-warning">@Model.PendingReservations</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title text-muted">Confirmed</h6>
                    <p class="display-6 mb-0 text-success">@Model.ConfirmedReservations</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title text-muted">Seated</h6>
                    <p class="display-6 mb-0">@Model.SeatedReservations</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Capacity summary -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title text-muted">Total Capacity (All sittings)</h6>
                    <p class="h3 mb-0">@Model.TotalCapacity</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title text-muted">Guests Booked</h6>
                    <p class="h3 mb-0">@Model.GuestsBooked</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h6 class="card-title text-muted">Remaining Capacity</h6>
                    <p class="h3 mb-0">@Model.RemainingCapacity</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Reservation list -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3">Reservations for @Model.Date.ToString("dd MMM yyyy")</h5>

            @if (Model.Reservations != null && Model.Reservations.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>Guest</th>
                                <th>Guests</th>
                                <th>Sitting</th>
                                <th>Area</th>
                                <th>Tables</th>
                                <th>Status</th>
                                <th>Source</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Model.Reservations.OrderBy(r => r.ReservationStart))
                            {
                                <tr>
                                    <td>@r.ReservationStart.ToString("h:mm tt")</td>
                                    <td>
                                        <strong>@r.GuestName</strong><br />
                                        <small class="text-muted">@r.Phone</small>
                                    </td>
                                    <td>@r.NumberOfGuests</td>
                                    <td>@r.SittingName</td>
                                    <td>@r.Area</td>
                                    <td>@r.Tables</td>
                                    <td>
                                        <span class="badge bg-@GetStatusClass(r.Status)">
                                            @r.Status
                                        </span>
                                    </td>
                                    <td>@r.Source</td>
                                    <td>@r.Notes</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No reservations for this date.</p>
            }
        </div>
    </div>
</div>

@functions {
    // Simple helper to colour status badges
    private string GetStatusClass(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Confirmed" => "success",
            "Seated" => "info",
            "Completed" => "secondary",
            "Cancelled" => "danger",
            _ => "light"
        };
    }
}